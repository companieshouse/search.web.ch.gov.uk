{
  "name": "web-starter-nodejs",
  "version": "1.0.0",
  "description": "A starter web application",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bin/www.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc && cp -r src/views dist/ && gulp static",
    "lint": "eslint 'src/*.ts' 'src/**/*.ts' ./src/'test/*.ts' './src/test/**/*.ts'",
    "lint:fix": "eslint 'src/*.ts' 'src/**/*.ts' './src/test/*.ts' './src/test/**/*.ts' --fix",
    "sonarqube": "sonar-scanner",
    "test": "mocha",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^1.0.21",
    "@companieshouse/structured-logging-node": "1.0.4",
    "body-parser": "^1.19.0",
    "cookies": "^0.8.0",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "govuk-frontend": "^3.2.0",
    "nunjucks": "^3.2.1",
    "nyc": "^15.1.0",
    "request": "^2.88.0",
    "uuid": "^3.4.0",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.11",
    "@types/chai-http": "~4.2.0",
    "@types/cookies": "^0.7.4",
    "@types/express": "^4.17.6",
    "@types/http-errors": "~1.6.3",
    "@types/mocha": "~7.0.2",
    "@types/node": "^12.7.8",
    "@types/nunjucks": "^3.1.2",
    "@types/request": "^2.48.3",
    "@types/sinon": "~9.0.4",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "@typescript-eslint/parser": "2.29.0",
    "chai": "~4.2.0",
    "chai-http": "~4.3.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "http-errors": "~1.7.3",
    "mocha": "~7.2.0",
    "nyc": "^15.1.0",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.3",
    "nyc": "^15.1.0",
    "sinon": "~9.0.2",
    "sonarqube-scanner": "^2.8.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/bin/www.ts"
  }
}
